#!/bin/bash

if mgit dirty -pul ~; then
    amount=$(mgit status -dpul ~ | wc -l)
    echo " $amount"
    echo " $amount"
fi

exit 0

# Process the "mouse event"
# scroll up
if [[ "${BLOCK_BUTTON}" -eq 4 ]]; then
	true
# right click
elif [[ "${BLOCK_BUTTON}" -eq 3 ]]; then
	true
# scroll down
elif [[ "${BLOCK_BUTTON}" -eq 5 ]]; then
	true
fi

